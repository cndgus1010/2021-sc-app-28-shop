<div class="search-wrap">
  <form action="/<%= currents[0] %>/<%= currents[1] %>" method="GET" class="form-inline">
    <select name="field" class="form-control mr-2">
      <option value="" <%=(field==='' ? 'select' : '' ) %> >
        전체검색</option>
      <% if(currents[1]==='user' || currents[1]==='order' ) { %>
        <option value="userid" <%=(field==='userid' ? 'select' : '' ) %>>
          아이디</option>
        <option value="username" <%=(field==='username' ? 'select' : '' ) %>>
          이름</option>
        <option value="email" <%=(field==='email' ? 'select' : '' ) %>>
          이메일</option>
        <option value="tel" <%=(field==='tel' ? 'select' : '' ) %>>
          전화번호</option>
        <option value="addr" <%=(field==='addr' ? 'select' : '' ) %>>
          주소</option>
        <% } %>
          <% if(currents[1]==='board' ) { %>
            <option value="title" <%=(field==='title' ? 'select' : '' ) %>>
              제목</option>
            <option value="content" <%=(field==='content' ? 'select' : '' ) %>>
              내용</option>
            <option value="writer" <%=(field==='writer' ? 'select' : '' ) %>>
              작성자</option>
            <% } %>
              <% if(currents[1]==='prd' ) { %>
                <option value="code" <%=(field==='code' ? 'select' : '' ) %>>
                  상품코드</option>
                <option value="name" <%=(field==='name' ? 'select' : '' ) %>>
                  상품명</option>
                <option value="content" <%=(field==='content' ? 'select' : '' ) %>>
                  상품설명</option>
                <% } %>
    </select>
    <input type="text" name="search" class="form-control mr-2">
    <button class="btn btn-info">검색</button>
  </form>
</div>